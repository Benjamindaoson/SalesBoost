# ============================================
# SalesBoost Frontend Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# Supabase Configuration (REQUIRED)
# ============================================
# Get these from your Supabase project settings
# https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# API Configuration (OPTIONAL)
# ============================================
# Backend API base URL
# Default: http://localhost:8000/api/v1
VITE_API_URL=http://localhost:8000/api/v1

# WebSocket URL for real-time features
# Default: ws://localhost:8000/ws
VITE_WS_URL=ws://localhost:8000/ws

# ============================================
# Monitoring & Analytics (OPTIONAL)
# ============================================

# Sentry DSN for error tracking
# Get from: https://sentry.io/settings/projects/your-project/keys/
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# PostHog for product analytics
# Get from: https://app.posthog.com/project/settings
# VITE_POSTHOG_KEY=phc_your_posthog_key
# VITE_POSTHOG_HOST=https://app.posthog.com

# ============================================
# Feature Flags (OPTIONAL)
# ============================================

# Enable AI-powered features (predictive prefetching, smart caching)
# Options: true | false
# Default: false
VITE_ENABLE_AI_FEATURES=false

# Enable analytics tracking (PostHog)
# Options: true | false
# Default: true
VITE_ENABLE_ANALYTICS=true

# Enable error reporting (Sentry)
# Options: true | false
# Default: true
VITE_ENABLE_ERROR_REPORTING=true

# ============================================
# Development Notes
# ============================================
#
# 1. After updating this file, restart your dev server
# 2. Environment variables are embedded at build time
# 3. Only variables prefixed with VITE_ are exposed to the client
# 4. Never commit sensitive keys to version control
# 5. Use different values for dev/staging/production
#
# ============================================
