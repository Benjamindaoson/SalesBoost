{
  "dashboard": {
    "title": "SalesBoost Coordinator - Production Monitoring",
    "tags": ["coordinator", "bandit", "production"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Bandit Exploration vs Exploitation",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(coordinator_bandit_decisions_total{exploration=\"true\"}[5m]) / rate(coordinator_bandit_decisions_total[5m])",
            "legendFormat": "Exploration Rate"
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
      },
      {
        "id": 2,
        "title": "Average Reward by Arm",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(coordinator_user_feedback_total[5m]) by (arm)",
            "legendFormat": "{{arm}}"
          }
        ],
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
      },
      {
        "id": 3,
        "title": "Node Execution Latency (P95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(coordinator_node_execution_duration_seconds_bucket[5m])) by (node_type)",
            "legendFormat": "{{node_type}} P95"
          },
          {
            "expr": "histogram_quantile(0.50, rate(coordinator_node_execution_duration_seconds_bucket[5m])) by (node_type)",
            "legendFormat": "{{node_type}} P50"
          }
        ],
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8}
      },
      {
        "id": 4,
        "title": "Coordinator Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(coordinator_node_execution_total{status=\"error\"}[5m]) by (node_type)",
            "legendFormat": "{{node_type}} errors/sec"
          }
        ],
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8}
      },
      {
        "id": 5,
        "title": "Celery Queue Length",
        "type": "graph",
        "targets": [
          {
            "expr": "celery_queue_length{queue=\"default\"}",
            "legendFormat": "Queue Backlog"
          }
        ],
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8}
      },
      {
        "id": 6,
        "title": "Celery Task Processing Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(celery_tasks_total{state=\"SUCCESS\"}[5m])",
            "legendFormat": "Success Rate"
          },
          {
            "expr": "rate(celery_tasks_total{state=\"FAILURE\"}[5m])",
            "legendFormat": "Failure Rate"
          }
        ],
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8}
      },
      {
        "id": 7,
        "title": "Routing Decision Confidence",
        "type": "graph",
        "targets": [
          {
            "expr": "avg(coordinator_routing_decisions_total) by (target_node)",
            "legendFormat": "{{target_node}}"
          }
        ],
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8}
      },
      {
        "id": 8,
        "title": "Active Sessions",
        "type": "stat",
        "targets": [
          {
            "expr": "salesboost_active_sessions",
            "legendFormat": "Active Sessions"
          }
        ],
        "gridPos": {"x": 12, "y": 24, "w": 6, "h": 4}
      },
      {
        "id": 9,
        "title": "System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"salesboost\"}",
            "legendFormat": "System Up"
          }
        ],
        "gridPos": {"x": 18, "y": 24, "w": 6, "h": 4}
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
